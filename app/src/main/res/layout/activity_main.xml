<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="horizontal"
        android:background="@color/blue"
        tools:context=".MainActivity">
    <ImageView
            android:id="@+id/splash_logo"
            android:layout_width="800dp"
            android:layout_height="800dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/logox"
            android:layout_centerInParent="true"/>

    <!-- first frag test -->
    <!--Ui backup-->
    <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="600dp"/>


    <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/button5"
            android:src="@drawable/tinytim"
            android:background="@drawable/button_frame"
            android:scaleType="centerInside"
            android:padding="10dp"
            android:layout_margin="20dp"
            android:layout_marginTop="20dp"
            android:importantForAccessibility="no"/>

    <Button
            android:text="@string/chore_list"
            android:layout_width="140dp"
            android:layout_height="55dp"
            android:id="@+id/button1"
            android:backgroundTint="@color/sunset_yellow"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:layout_alignParentBottom="true"
    />
    <Button
            android:text="@string/highscores"
            android:layout_width="140dp"
            android:layout_height="55dp"
            android:id="@+id/button4"
            android:backgroundTint="@color/sunset_yellow"
            android:textColor="@color/black"
            android:layout_marginStart="325dp"
            android:layout_alignParentBottom="true"
    />

    <Button
            android:text="@string/parent_settings"
            android:layout_width="140dp"
            android:layout_height="55dp"
            android:id="@+id/button10"
            android:textColor="@color/black"

            android:layout_marginStart="170dp"
            android:backgroundTint="@color/sunset_yellow"
            android:layout_alignParentBottom="true"
    />
    <Button
            android:text="@string/store"
            android:layout_width="140dp"
            android:layout_height="55dp"
            android:id="@+id/button2"
            android:textColor="@color/black"

            android:layout_marginStart="480dp"
            android:backgroundTint="@color/sunset_yellow"
            android:layout_alignParentBottom="true"
    />

    <Button
            android:text="@string/back"
            android:layout_width="140dp"
            android:layout_height="55dp"
            android:id="@+id/backButton"
            android:textColor="@color/black"
            android:layout_marginStart="640dp"
            android:backgroundTint="@color/sunset_yellow"
            android:layout_alignParentBottom="true"
    />

</RelativeLayout>