<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/splash_background"
        android:padding="16dp">

    <TextView
            android:id="@+id/portalTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Your Portal"
            android:textColor="#f5a469"
            android:textSize="40sp"
            android:textStyle="bold"
            android:fontFamily="@font/oswald"
            android:shadowColor="#80000000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="15"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"/>

    <!-- Parent Button Container -->
    <androidx.cardview.widget.CardView
            android:id="@+id/parentButtonContainer"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="100dp"
            app:layout_constraintTop_toBottomOf="@id/portalTitle"
            app:layout_constraintEnd_toStartOf="@id/childButtonContainer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp">
        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/parentPortalButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_parent_button"
                android:stateListAnimator="@null"
                android:contentDescription="Parent portal button"/>
    <TextView
            android:id="@+id/parentPortalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parent"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            android:textStyle="bold"
            android:fontFamily="@font/oswald"
            android:shadowColor="#4d000000"
            android:shadowDx="20"
            android:shadowDy="20"
            android:shadowRadius="20"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="Parent portal text"/>
    </androidx.cardview.widget.CardView>
    <!-- Child Button Container -->
    <androidx.cardview.widget.CardView
            android:id="@+id/childButtonContainer"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="100dp"
            app:layout_constraintTop_toBottomOf="@id/portalTitle"
            app:layout_constraintStart_toEndOf="@id/parentButtonContainer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp">
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/childPortalButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_child_button"
            android:stateListAnimator="@null"
            android:contentDescription="Child portal button"/>
    <TextView
            android:id="@+id/childPortalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Child"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            android:textStyle="bold"
            android:fontFamily="@font/oswald"
            android:shadowColor="#4D000000"
            android:shadowDx="20"
            android:shadowDy="20"
            android:shadowRadius="20"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="Child portal text"/>
        </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>