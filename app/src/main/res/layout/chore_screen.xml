<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rewardShopLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sky_blue"
        tools:context=".MainActivity">

    <!-- Top App Bar (MaterialToolbar) -->
    <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/rewardShopToolbar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:backgroundTint="@color/sunset_yellow"
            android:theme="@style/ThemeOverlay.MaterialComponents.ActionBar"
            android:title="@string/reward_shop"
            android:titleTextColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="parent"/>


    <TextView
            android:id="@+id/storeHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lets Do some Chores!"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/rewardShopToolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" />


    <GridLayout
            android:id="@+id/choicesLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="1"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/storeHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.0">


        <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:focusable="true" app:cardCornerRadius="12dp"
                android:clickable="true"
                app:cardElevation="4dp">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:gravity="center">

                <ImageView
                        android:id="@+id/choice1Image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/small_wash"/>

                <TextView
                        android:id="@+id/choice1Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lets do Laundry!"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginTop="8dp"/>

                <TextView
                        android:id="@+id/choice1Cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_30_coins"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginTop="4dp"/>

            <Button
                    android:id="@+id/chore1VideoButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Tutorial"
                    android:layout_marginTop="8dp"/>
        </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:focusable="true" app:cardCornerRadius="12dp"
                android:clickable="true"
                app:cardElevation="4dp">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:gravity="center">

                <ImageView
                        android:id="@+id/choice2Image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/broom9"/>

                <TextView
                        android:id="@+id/choice2Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lets Clean Floors!"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginTop="8dp" tools:ignore="HardcodedText"/>

                <TextView
                        android:id="@+id/choice2Cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_60_coins"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginTop="4dp"/>
                <Button
                        android:id="@+id/chore2VideoButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Tutorial"
                        android:layout_marginTop="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:focusable="true" app:cardCornerRadius="12dp"
                android:clickable="true"
                app:cardElevation="4dp">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:gravity="center">

                <ImageView
                        android:id="@+id/choice3Image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/dirtydish"/>

                <TextView
                        android:id="@+id/choice3Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lets Wash Dishes"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginTop="8dp"/>

                <TextView
                        android:id="@+id/choice3Cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_80_coins"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginTop="4dp"/>
                <Button
                        android:id="@+id/chore3VideoButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Tutorial"
                        android:layout_marginTop="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:focusable="true" app:cardCornerRadius="12dp"
                android:clickable="true"
                app:cardElevation="4dp">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:gravity="center">

                <ImageView
                        android:id="@+id/choice4Image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/messy_room"/>

                <TextView
                        android:id="@+id/choice4Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pick up Toys!"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginTop="8dp"/>

                <TextView
                        android:id="@+id/choice4Cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_90_coins"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginTop="4dp"/>

                <Button
                        android:id="@+id/chore4VideoButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Tutorial"
                        android:layout_marginTop="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
