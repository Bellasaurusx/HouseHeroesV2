        <activity android:name=".ParentActivity" android:exported="true" />
        <activity android:name=".ParentDashboardScreen" android:label="ParentDashboardScreen" android:exported="true" />
        <activity android:name=".ChildActivity" android:exported="true" />
        <activity android:name=".AddChoreActivity" android:label="Add Chore" android:exported="true" />
