<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <application
            android:allowBackup="true"
            android:dataExtractionRules="@xml/data_extraction_rules"
            android:fullBackupContent="@xml/backup_rules"
            android:icon="@mipmap/default_icon"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/default_icon_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.HouseHeroesV2"
            tools:targetApi="31">
        <activity
                android:name=".MainActivity"
                android:exported="true"
                android:theme="@style/Theme.HouseHeroesV2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:name=".ParentDashboardScreen"
                android:label="ParentDashboardScreen"
                android:exported="true"/>

        <activity
                android:name=".AddChoreActivity"
                android:label="Add Chore"
                android:exported="true" />

        <activity
                android:name=".AddChildActivity"
                android:label="Add Child"
                android:exported="true" />

        <activity
                android:name=".ChangePasswordActivity"
                android:label="Change Password"
                android:exported="true" />

        <activity
                android:name=".DeleteAccountActivity"
                android:label="Delete Account"
                android:exported="true" />

    </application>

</manifest>